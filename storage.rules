
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own avatar path
    match /avatars/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
